<div>
    {{#with main}}
    <main>
        <section>
            {{> title big=true data="My Educations"}}
            <ul>
                {{#each educations}}
                <li>{{name}} {{#unless isEnd}} |ще в процесі| {{/unless}}</li>
                {{/each}}
            </ul>
        </section>
        <br>
        <hr>
        <section>
            {{> title big=false data="My Certifications"}}
            <ul>
                {{#each certificates}}
                <li>{{name}} | ({{id}}) </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>